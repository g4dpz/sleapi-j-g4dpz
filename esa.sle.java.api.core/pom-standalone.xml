<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>esa.sle.java</groupId>
    <artifactId>esa.sle.java.api.core</artifactId>
    <version>5.1.6</version>
    <packaging>jar</packaging>

    <name>SLE Java API Core</name>
    <description>CCSDS Space Link Extension (SLE) API implementation - Core library with RAF, RCF, ROCF, CLTU, and FSP services</description>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <maven.compiler.release>17</maven.compiler.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jasn1.version>1.11.2</jasn1.version>
    </properties>

    <dependencies>
        <!-- ASN.1 Compiler (for code generation) -->
        <dependency>
            <groupId>com.beanit</groupId>
            <artifactId>jasn1-compiler</artifactId>
            <version>${jasn1.version}</version>
        </dependency>
        
        <!-- ASN.1 Runtime -->
        <dependency>
            <groupId>com.beanit</groupId>
            <artifactId>jasn1</artifactId>
            <version>${jasn1.version}</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/main</sourceDirectory>
        
        <plugins>
            <!-- Clean generated sources -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>src/main/generated</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            
            <!-- Copy ASN.1 libraries to lib directory -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.6.0</version>
                <executions>
                    <execution>
                        <id>copy-libraries</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <item>
                                    <groupId>com.beanit</groupId>
                                    <artifactId>jasn1-compiler</artifactId>
                                </item>
                                <item>
                                    <groupId>com.beanit</groupId>
                                    <artifactId>jasn1</artifactId>
                                </item>
                            </artifactItems>
                            <outputDirectory>lib</outputDirectory>
                            <stripVersion>true</stripVersion>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Generate ASN.1 sources -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>generate-asn-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>java</executable>
                            <arguments>
                                <argument>-classpath</argument>
                                <classpath>
                                    <dependency>com.beanit:jasn1-compiler</dependency>
                                    <dependency>com.beanit:jasn1</dependency>
                                    <dependency>antlr:antlr</dependency>
                                </classpath>
                                <argument>com.beanit.jasn1.compiler.Compiler</argument>
                                <argument>-o</argument>
                                <argument>${basedir}/src/main/generated</argument>
                                <argument>-f</argument>
                                <!-- Common Module -->
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-COMMON-TYPES.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-COMMON-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/ISP1-CREDENTIALS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-BIND-TYPES.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/ISP1-SLE-BIND-PDUS.asn</argument>
                                <!-- RAF Module -->
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-RAF-INCOMING-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-RAF-OUTGOING-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-RAF-STRUCTURES.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/ISP1-RAF-PDUS.asn</argument>
                                <!-- CLTU Module -->
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-CLTU-INCOMING-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-CLTU-OUTGOING-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-CLTU-STRUCTURES.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/ISP1-CLTU-PDUS.asn</argument>
                                <!-- RCF Module -->
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-RCF-INCOMING-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-RCF-OUTGOING-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-RCF-STRUCTURES.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/ISP1-RCF-PDUS.asn</argument>
                                <!-- ROCF Module -->
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-ROCF-INCOMING-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-ROCF-OUTGOING-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-ROCF-STRUCTURES.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/ISP1-ROCF-PDUS.asn</argument>
                                <!-- FSP Module -->
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-FSP-INCOMING-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-FSP-OUTGOING-PDUS.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/CCSDS-SLE-TRANSFER-SERVICE-FSP-STRUCTURES.asn</argument>
                                <argument>${basedir}/src/main/java/esa/sle/impl/ifs/asn1/ISP1-FSP-PDUS.asn</argument>
                            </arguments>
                            <longModulepath>true</longModulepath>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Add generated sources to build -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.4.0</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/src/main/generated</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Compile -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                    <release>17</release>
                </configuration>
            </plugin>
            
            <!-- Create JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            
            <!-- Attach sources -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Attach javadoc -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.6.0</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doclint>none</doclint>
                    <quiet>true</quiet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
