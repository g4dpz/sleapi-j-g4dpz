<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>esa.sle.demo</groupId>
  <artifactId>sle-demo</artifactId>
  <name>SLE Demo - MOC, Ground Station, and Spacecraft Simulator</name>
  <version>1.0.0</version>
  <description>Demonstration of SLE RAF service for spacecraft telemetry transfer</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>17</source>
          <target>17</target>
          <release>17</release>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <id>moc-client</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>sle-demo-${project.version}-moc</finalName>
              <transformers>
                <transformer>
                  <mainClass>esa.sle.demo.moc.MOCClient</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>ground-station</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>sle-demo-${project.version}-groundstation</finalName>
              <transformers>
                <transformer>
                  <mainClass>esa.sle.demo.groundstation.GroundStationServer</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>spacecraft</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>sle-demo-${project.version}-spacecraft</finalName>
              <transformers>
                <transformer>
                  <mainClass>esa.sle.demo.spacecraft.SpacecraftSimulator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.release>17</maven.compiler.release>
    <maven.compiler.target>17</maven.compiler.target>
    <maven.compiler.source>17</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
